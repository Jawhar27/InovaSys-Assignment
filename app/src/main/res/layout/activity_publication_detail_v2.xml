<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PublicationDetailActivityV2"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_fragment"
        android:layout_weight="1"
        android:name="com.example.inovaassignment.fragments.ImageFragment">
    </fragment>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detail_fragment"
        android:layout_weight="1"
        android:name="com.example.inovaassignment.fragments.DetailFragment">
    </fragment>

</LinearLayout>